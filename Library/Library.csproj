<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net48</TargetFrameworks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>System.TBA</RootNamespace>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OS)' == 'Windows_NT' OR '$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <PackageReference Include="System.Memory" Version="4.5.5" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="8.0.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.1.2" />
  </ItemGroup>

  <!-- Exclude polyfills for non-Framework targets -->
  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Compile Remove="System/ArgumentNullException.cs" />
    <Compile Remove="System/ArgumentException.cs" />
    <Compile Remove="System/Runtime/InteropServices/Marshal.cs" />
    <Compile Remove="System/Runtime/CompilerServices/CallerArgumentExpressionAttribute.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(OS)' == 'Windows_NT' OR '$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <Compile Remove="Copied/Unix/*.cs" />
    <Compile Remove="**/*.Unix.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Compile Remove="Copied/Windows/*.cs" />
    <Compile Remove="**/*.Windows.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Workaround https://github.com/dotnet/project-system/issues/935 -->
    <None Include="Copied/**/*.cs" />
    <None Include="Helpers/**/*.cs" />
    <None Include="*.cs" />
  </ItemGroup>

  <!-- Build native library on non-Windows platforms before C# compilation -->
  <Target Name="BuildNativeLibrary" BeforeTargets="BeforeBuild" Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Message Text="Building native PAL library with CMake..." Importance="high" />
    <Exec Command="cmake -S native -B native/build" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Exec Command="cmake --build native/build" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Copy SourceFiles="native/build/libpal_process.so" DestinationFolder="native" Condition="Exists('native/build/libpal_process.so')" />
    <Copy SourceFiles="native/build/libpal_process.dylib" DestinationFolder="native" Condition="Exists('native/build/libpal_process.dylib')" />
  </Target>

  <!-- Copy native library to output directory -->
  <Target Name="CopyNativeLibrary" AfterTargets="Build" Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Copy SourceFiles="native/libpal_process.so" DestinationFolder="$(OutputPath)" Condition="Exists('native/libpal_process.so')" />
    <Copy SourceFiles="native/libpal_process.dylib" DestinationFolder="$(OutputPath)" Condition="Exists('native/libpal_process.dylib')" />
  </Target>

  <!--Include native library in build output for dependent projects -->
  <Target Name="IncludeNativeLibraryInOutput" BeforeTargets="GetCopyToOutputDirectoryItems" Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <ItemGroup>
      <AllItemsFullPathWithTargetPath Include="$(OutputPath)libpal_process.so" Condition="Exists('$(OutputPath)libpal_process.so')">
        <TargetPath>libpal_process.so</TargetPath>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </AllItemsFullPathWithTargetPath>
      <AllItemsFullPathWithTargetPath Include="$(OutputPath)libpal_process.dylib" Condition="Exists('$(OutputPath)libpal_process.dylib')">
        <TargetPath>libpal_process.dylib</TargetPath>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </AllItemsFullPathWithTargetPath>
    </ItemGroup>
  </Target>

  <!-- Clean native library -->
  <Target Name="CleanNativeLibrary" AfterTargets="Clean" Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Message Text="Cleaning native PAL library..." Importance="high" />
    <RemoveDir Directories="native/build" />
    <Delete Files="native/libpal_process.so;native/libpal_process.dylib" />
  </Target>

</Project>
