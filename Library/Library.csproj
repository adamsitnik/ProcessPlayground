<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net48</TargetFrameworks>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>System.TBA</RootNamespace>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OS)' == 'Windows_NT' OR '$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <PackageReference Include="System.Memory" Version="4.5.5" />
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="8.0.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="6.1.2" />
  </ItemGroup>

  <!-- Exclude polyfills for non-Framework targets -->
  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Compile Remove="System/ArgumentNullException.cs" />
    <Compile Remove="System/ArgumentException.cs" />
    <Compile Remove="System/Runtime/InteropServices/Marshal.cs" />
    <Compile Remove="System/Runtime/CompilerServices/CallerArgumentExpressionAttribute.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(OS)' == 'Windows_NT' OR '$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <Compile Remove="Copied/Unix/*.cs" />
    <Compile Remove="**/*.Unix.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Compile Remove="Copied/Windows/*.cs" />
    <Compile Remove="**/*.Windows.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- Workaround https://github.com/dotnet/project-system/issues/935 -->
    <None Include="Copied/**/*.cs" />
    <None Include="*.cs" />
  </ItemGroup>

  <!-- Build native library on non-Windows platforms before C# compilation -->
  <Target Name="BuildNativeLibrary" BeforeTargets="BeforeBuild" Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Message Text="Building native process spawn library..." Importance="high" />
    <Exec Command="make -C native" WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>

  <!-- Copy native library to output directory on non-Windows platforms -->
  <ItemGroup Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Content Include="native\libprocessspawn.so">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>libprocessspawn.so</Link>
    </Content>
  </ItemGroup>

  <!-- Clean native library -->
  <Target Name="CleanNativeLibrary" AfterTargets="Clean" Condition="'$(OS)' != 'Windows_NT' AND '$(TargetFrameworkIdentifier)' != '.NETFramework'">
    <Message Text="Cleaning native process spawn library..." Importance="high" />
    <Exec Command="make -C native clean" WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>

</Project>
